{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@root/*": ["./*"],
			"@src/*": ["./src/*"],
			"@lib/*": ["./src/lib/*"],
			"@structures/*": ["./src/structures/*"],
			"@handlers/*": ["./src/handlers/*"],
			"@commands/*": ["./src/commands/*"],
			"@assets/*": ["./src/assets/*"],
			"@events/*": ["./src/events/*"],
			"@utils/*": ["./src/utils/*"],
			"@db/*": ["src/db/*"],
			"@data": ["./src/data/*"]
		}
	},
	"exclude": ["node_modules"]
}
